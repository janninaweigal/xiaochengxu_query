#queryContainer .headimg{
  width:100%;
  height:145rpx;
}
#queryContainer form{
  width:100%;
}
#queryContainer .form-group {
  width: 100%;
  margin-bottom: 15px;
  text-align: left;
}
#queryContainer .form-group text{
  display: inline-block;
  max-width: 100%;
  font-weight: 700;
  margin-bottom: 5px;
}
#queryContainer .form-group .form-control {
  display: block;
  width: 100%;
  height: 45px;
  font-size: 14px;
  box-sizing:border-box;
  padding:0px 15rpx;
  line-height:45px;
  color: #555;
  background-color: #fff;
  background-image: none;
  border: 1px solid #ccc;
  border-radius: 4px;
}