/* 头部 */
#home .header{
  width:100%;
  display: flex;
  flex-direction:row;
  justify-content:space-around;
  align-items:center;
  margin:10rpx 0rpx;
}
#home .header .userimg{
  width:100rpx;
  height:100rpx;
  line-height:100rpx;
  border-radius:50%;
  margin:5rpx 0rpx;
  vertical-align:middle;
}
#home .header .username{
  margin-left:10rpx;
  vertical-align:middle;
  font-size:40rpx;
  font-weight:bolder;
}
/* 轮播图 */
#home .swiper-container {
  width: 100%;
  height: 200px;
}
#home .swiper-container .slide-img {
  width: 100%;
  height: 200px;
  border-radius: 15rpx;
}
/* 下方功能区 */
#home .module-container {
  width: 100%;
  display: flex;
  flex-wrap:wrap;
  box-sizing: border-box;
  padding:0rpx 20rpx;
  flex-direction:row;
  justify-content:flex-start;
  margin-top: 60rpx;
}
 #home .module-container .box-wrapper{
  height: 140rpx;
  width: 140rpx;
  box-sizing:border-box;
  margin-left:33rpx;
  margin-bottom:10rpx;
} 
#home .module-container .box-wrapper .servicebox{
  display:flex;
  flex-direction:column;
  justify-content:center;
  align-items:center;
  padding:5rpx 0rpx;
  border:1px solid #ccc;
}
#home .module-container .box-wrapper .servicebox .box-img{
  width:80rpx;
  height:80rpx;
}